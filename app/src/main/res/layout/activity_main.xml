<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BE7413FD"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/inicio"
        android:layout_width="342dp"
        android:layout_height="95dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Calculadora mágica de las calificaciones del semestre feliz :D"
        android:textColor="#FBF3F9"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/jejeje"
        android:layout_width="139dp"
        android:layout_height="41dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="(Bueno, no tan feliz :'3)"
        android:textColor="#FBF3F9"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/elige"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.941"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inicio"
        app:layout_constraintVertical_bias="0.555" />

    <TextView
        android:id="@+id/elige"
        android:layout_width="341dp"
        android:layout_height="74dp"
        android:layout_marginTop="44dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Elige el período del que quieras conocer tu promedio"
        android:textColor="#FBF3F9"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inicio" />

    <TableLayout
        android:layout_width="338dp"
        android:layout_height="436dp"
        app:layout_constraintBottom_toTopOf="@+id/pie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elige">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="153dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/primer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Primer Parcial"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:backgroundTint="#BCEDAEE8"
                        app:iconTint="#FFFFFF" />

                    <Button
                        android:id="@+id/segundo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Segundo Parcial"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:backgroundTint="#D5ECA1F1" />

                    <Button
                        android:id="@+id/tercer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tercer Parcial"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:backgroundTint="#D190E3" />

                    <Button
                        android:id="@+id/semestre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Semestre"
                        android:textStyle="bold"
                        app:backgroundTint="#E2B273DA" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="269dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/blair" />
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/pie"
        android:layout_width="233dp"
        android:layout_height="24dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="6° Semestre Técnico en Programación ඞ"
        android:textColor="#FBF3F9"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>